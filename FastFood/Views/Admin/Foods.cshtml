
@{
    ViewBag.Title = "Foods";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content gallery pad1">

    <div class="ic">More Website Templates  TemplateMonster.com - July 30, 2014!</div>
    <div class="container">
        <div class="row">
            @{
                List<FastFood.Models.Food> foods = (List<FastFood.Models.Food>)ViewData["Foods"];
            }
            @{
                int a = 0;
            }

            @foreach (FastFood.Models.Food r in foods)
            {

                <div class="grid_4">
                    <div class="gall_block">
                        <div class="maxheight">
                            <a href="@r.foodImage" class="gall_item"><img src="@r.foodImage" alt=""></a>
                            <div class="gall_bot">
                                <div class="text1"><a href="#">Food Name : @r.foodName </a></div>

                                Restaurant : @r.restaurant.restaurantName<br />
                                Food Price :  @r.foodPrice

                                <br />
                                @Html.ActionLink("Delete", "Delete", new { id=@r.foodId}, new { @class="btn"})
                                @Html.ActionLink("Update", "Update", new { id = @r.foodId }, new { @class = "btn" })

                            </div>

                        </div>
                    </div>
                </div>

                a = a + 1;
                if (a % 3 == 0)
                {
                    @:<div class="clear sep__1"></div>
                    }



            }



        </div>
    </div>
</section>