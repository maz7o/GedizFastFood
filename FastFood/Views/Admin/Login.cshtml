<script src="/Scripts/FormAdmin.js"></script>
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="form_block">
        <div class="container">
            <div class="row">
                <div class="grid_11">
                    <h2>Login</h2>
                    <form id="form">

                        <div class="modal fade response-message">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">Modal title</h4>
                                    </div>
                                    <div class="modal-body">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="response-error-message"></div>
                        <label class="name">
                            <input type="text" id="txtuserid" name="name" placeholder="Username:" value="" data-constraints="@@Required " />
                           
                        </label>
                        <div class="clear"></div>
                        <label class="phone">
                            <input type="password" id="txtpassword" name="password" placeholder="Password:" value="" data-constraints="@@Required" />
                            
                        </label>

                        <div class="clear"></div>
                        <div class="formerrormsg" style="color:red;"></div>
                        
                        <a href="#"  data-type="submit" class="btn" onclick="javascript: ValidateUser();">login</a>
                       
                            <img src="~/Content/Images/Preloader_4.gif" style="display:none; " class="loading" />
                      
                        

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
