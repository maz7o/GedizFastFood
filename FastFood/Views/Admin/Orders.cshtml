
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content gallery pad1">

    <div class="ic">More Website Templates  TemplateMonster.com - July 30, 2014!</div>
    <div class="container">
        <div class="row">
            @{
                List<FastFood.Models.ReservedFoods> foods = (List<FastFood.Models.ReservedFoods>)ViewData["Foods"];
            }
            @{
                int a = 0;
            }

            @foreach (FastFood.Models.ReservedFoods r in foods)
            {

                <div class="grid_4">
                    <div class="gall_block">
                        <div class="maxheight">
                            <a href="@r.food.foodImage" class="gall_item"><img height="300" width="380" src="@r.food.foodImage" alt=""></a>
                            <div class="gall_bot">
                                <div class="text1"><a href="#">Food Name : @r.food.foodName </a></div>

                                Restaurant : @r.food.restaurant.restaurantName<br />
                                Food Price :  @r.food.foodPrice 
                                UserID : @r.studentId

                                <br />
                                @Html.ActionLink("Ready", "Order", new { id = @r.orderId}, new { @class = "btn" })
                              

                            </div>

                        </div>
                    </div>
                </div>

                a = a + 1;
                if (a % 3 == 0)
                {
                    @:<div class="clear sep__1"></div>
                    }



            }



        </div>
    </div>
</section>

